<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="org.orion.common.scheduel.dao.JobScheduelDao">

    <select id="queryBatchJob" parameterType="string" resultType="org.orion.common.scheduel.BatchJobEntity">
        SELECT * FROM BATCH_JOB_SCHEDUEL WHERE NAME = #{name}
    </select>

    <select id="queryAllBatchJobs" resultType="org.orion.common.scheduel.BatchJobEntity">
        SELECT * FROM BATCH_JOB_SCHEDUEL
    </select>

    <select id="queryBatchJobByTrigger" parameterType="org.orion.common.scheduel.JobScheduel" resultType="org.orion.common.scheduel.BatchJobEntity">
        SELECT * FROM BATCH_JOB_SCHEDUEL WHERE CRON = #{cron} AND CLASS_NAME = #{className}
    </select>
</mapper>